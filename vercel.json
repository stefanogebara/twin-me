{
  "version": 2,
  "buildCommand": "npm run build",
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/assets/$1"
    },
    {
      "src": "/(.*\\.(js|css|png|jpg|jpeg|gif|svg|ico|woff|woff2|ttf|eot))",
      "dest": "/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "crons": [
    {
      "path": "/api/cron/token-refresh",
      "schedule": "*/5 * * * *"
    },
    {
      "path": "/api/cron/platform-polling",
      "schedule": "*/30 * * * *"
    },
    {
      "path": "/api/cron/pattern-learning",
      "schedule": "0 */6 * * *"
    }
  ]
}
